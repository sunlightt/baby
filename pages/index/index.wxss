.loadInfo{
    position: relative;
    padding:80rpx 40rpx;
}
.btn{
    width: 20%;
    height: 80rpx;
    border-radius: 30rpx;
    line-height: 80rpx;
    text-align: center;
    border: 1px solid #e4393c;
    position: absolute;
    top: 160%;
    left:40%;
}

.submit{
    width:100%;
    margin:90rpx auto 0;
    background:#FF6E00;
    color:#fff;
}

.info .item{
    display:flex;
    flex-direction:row;
}
.info .item .left{
    flex:4;
}
.info .item .left{

    font:40rpx/120rpx '微软雅黑';
}
.info .item .right{
    flex:6;
    height:120rpx;
    box-sizing:border-box;
    border-bottom:1rpx solid #eee;
    
}
.info .item .right input , .info .item .right picker{
    display:block;
    width:100%;
    height:120rpx;
    font:40rpx/120rpx '微软雅黑';
}

.title{
     display:block;
     width:100%;
     font:40rpx/80rpx '微软雅黑';
     color:#333;
     text-align:center;
     font-weight:bold;
}