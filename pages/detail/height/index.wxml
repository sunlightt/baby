<view class='feed'>
    <image src='/img/sg.png' mode='aspectFit'></image>
</view>
<form bindsubmit='submit'>
    <view class='main'>
        <view class='text'>
            <view>记录日期</view>
            <view>
                <picker mode="date" value="{{dateValue}}" start="1999-01-01" end="2999-12-12" bindchange="datePickerBindchange">
                    {{dateValue}}
                </picker>
            </view>
        </view>
        <view class='text'>
            <view>记录时间</view>
            <view>
                <picker mode="time" value="{{timeValue}}" start="00:00" end="24:00" bindchange="timePickerBindchange">
                    {{timeValue}}
                </picker>
            </view>
        </view>
        <!-- <view class='text'>
            <view>体重</view>
            <view>
                <picker mode="multiSelector" bindchange="bindMultiPickerChange" range="{{heightArray}}">
                    {{heightArray[0][heightIndex[0]]}}.{{heightArray[1][heightIndex[1]]}}Kg
                </picker>
            </view>
        </view> -->
        <view class='text'>
            <view>体重</view>
            <view class="feed_amount">
                <input name="weight" placeholder="单位kg" placeholder-style="color:#fff;"></input>
            </view>
        </view>
        <view class='text'>
            <view>身高</view>
            <view class="feed_amount">
                <input name="height" placeholder="单位cm" placeholder-style="color:#fff;"></input>
            </view>
        </view>
        <!-- <view class='text'>
            <view>身高</view>
            <view>
                <picker mode="multiSelector" bindchange="bindMultiPicker2Change" range="{{weightArray}}">
                    {{weightArray[0][weightIndex[0]]}}{{weightArray[1][weightIndex[1]]}}cm
                </picker>
            </view>
        </view> -->
    </view>
    <view class='footer'>
        <view bindtap='reset'>重置</view>
        <button form-type='submit' class="sub_btn">提交</button>
    </view>
</form>


<!--提示弹框  -->
<view class="toust_mark" wx:if="{{showToast}}">
    <image src="/img/tip.png"></image>
    <text>{{show_tip_msg}}</text>
</view>